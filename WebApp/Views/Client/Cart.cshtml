@model IEnumerable<Dominio.Dish>

@{
    ViewData["Title"] = "Cart";
}

<h1>Tu orden</h1>

@if (Model.Count() == 0)
{
    <section class="container bg-white border">
        <div class="row">
            <div class="col-12 d-flex flex-column justify-content-center text-center p-3">
                <figure>
                    <img class="empty-order" src="~/assets/img/20.svg" alt="Plato vacío" style="height:96px;" />
                </figure>
                <h3 class="lead">Tu orden todavía está vacía :(</h3>
            </div>
        </div>
    </section>
}
else
{
    <section class="container border mb-3">
        <div class="row">
            <div class="col-12 d-flex flex-column justify-content-center text-center p-3">
                <figure>
                    <img class="empty-order" src="~/assets/img/cart.svg" alt="ícono de página de carrito" style="height: 96px;" />
                </figure>
                <h2 class="lead">Revisá la lista de platos para hacer tu pedido :)</h2>
            </div>
        </div>
    </section>

    <section class="container">

        @foreach (var item in Model)
        {
            <div class="row mb-3 p-3 border d-flex align-content-center">
                <div class="col-1 d-flex align-content-center">
                    <img src="~/assets/img/burger.svg" alt="Imagen de hamburguesa" style="height: 48px;" />
                </div>
                <div class="col-9">
                    <p>
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <p>
                        @Html.DisplayFor(modelItem => item.Price)
                    </p>
                </div>
                <div class="col-2">
                    <p>
                        @Html.ActionLink("Ver", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Quitar", "Remove", "Dish", new { id = item.ID })
                    </p>
                </div>
            </div>
        }
    </section>

    @if (false)
    {
        <h2>Detalles del pago</h2>

        <section class="border mb-3 p-3">
            <div class="row">
                <div class="col-4">
                    <p><b>COSTO POR PLATOS:</b></p>
                </div>
                <div class="col-8">
                    <p>$ @ViewBag.Costo</p>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <p><b>CUBIERTO:</b></p>
                </div>
                <div class="col-8">
                    <p>$ @ViewBag.Cubierto</p>
                </div>
            </div>
            <div class="row">
                <div class="col-4">
                    <p><b>TOTAL A PAGAR:</b></p>
                </div>
                <div class="col-8">
                    <p>$ @ViewBag.Total</p>
                </div>
            </div>
        </section>
    }

<section class="d-flex justify-content-center mb-3">
    <div class="row">
        <div class="col-6 d-flex">
            @Html.ActionLink("¡Como en el local!",
                                 "Local",
                                 new { },
                                 new { @class = "btn btn-outline-primary" }
                             )
        </div>
        <div class="col-6 d-flex">
            @Html.ActionLink("¡Quiero delivery!",
                                 "Delivery",
                                 new { },
                                 new { @class = "btn btn-outline-primary" }
                             )
        </div>
    </div>
</section>

}