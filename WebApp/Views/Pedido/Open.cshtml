@model Dominio.Pedido

@{
    ViewData["Title"] = "Cerrar pedido";
}

<h2>Pedido en curso</h2>

<section class="container border mb-3">
    <div class="row">
        <div class="col-12 d-flex flex-column justify-content-center text-center p-3">
            <figure>
                <img class="empty-order" src="~/assets/img/ongoing.svg" alt="Imagen de la orden abierta" style="height: 96px;" />
            </figure>
            <h2 class="lead">¡Tu pedido está siendo preparado! :P</h2>
        </div>
    </div>
</section>

<section class="d-flex justify-content-center mb-3">
    <div class="row">
        <div class="col-lg-6 p-3 col-sm-12">
            @Html.ActionLink("¡Lo tengo!",
                                 "Close",
                                 new { },
                                 new { @class = "btn btn-outline-success" }
                             )
        </div>
        <div class="col-lg-6 col-sm-12 p-3">
            @Html.ActionLink("Cancelar :(",
                                 "Cancel",
                                 new { },
                                 new { @class = "btn btn-outline-danger" }
                             )
        </div>
    </div>
</section>



<h1>Pedido abierto</h1>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FinalPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>

<section class="container border mb-3">
    <div class="row justify-content-center">
        <div class="col-12 p-3 d-flex justify-content-center">
            @Html.ActionLink("Volver al menú :P",
                                 "Index",
                                 "Dish",
                                 new { },
                                 new { @class = "btn btn-outline-success" }
                             )
        </div>
    </div>
</section>
