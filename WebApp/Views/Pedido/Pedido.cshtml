@model Dominio.Pedido

@{
    ViewData["Title"] = "Pedido";
}

<h1>Pedido</h1>

<section class="container border mb-3">
    <div class="row">
        <div class="col-12 d-flex flex-column justify-content-center text-center p-3">
            <figure>
                <img class="empty-order" src="~/assets/img/local.svg" alt="ícono de servicio en el local" style="height: 96px;" />
            </figure>
            <h2 class="lead">Confirmá los detalles del servicio en el local</h2>
        </div>
    </div>
</section>

<section class="container">

    @foreach (var item in ViewBag.Cart)
    {
        <div class="row mb-3 p-3 border d-flex align-content-center">
            <div class="col-1 d-flex align-content-center">
                <img src="~/assets/img/burger.svg" alt="Imagen de hamburguesa" style="height: 48px;" />
            </div>
            <div class="col-11">
                <h2>
                    @item.Name
                </h2>
                <h3>
                    @item.Price
                </h3>
            </div>
        </div>
    }
</section>

<h1>Detalles del pago</h1>

<section class="border mb-3 p-3">
    <div class="row">
        <div class="col-4">
            <p>Fecha</p>
        </div>
        <div class="col-8">
            <p>@Html.DisplayFor(model => model.Date)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <p>TOTAL</p>
        </div>
        <div class="col-8">
            <p>@Html.DisplayFor(model => model.FinalPrice)</p>
        </div>
    </div>
</section>

<section class="d-flex justify-content-center mb-3">
    <div class="row">
        <div class="col-6">
            @Html.ActionLink("GO!",
                                 "GO",
                                 new { },
                                 new {@class = "btn btn-outline-success" }
                             )
        </div>
        <div class="col-6">
            @Html.ActionLink("Cancelar",
                                 "Close",
                                 new { },
                                 new { @class = "btn btn-outline-danger" }
                             )
        </div>
    </div>
</section>
